---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Astro" description="Astro">
  <div class="slider-container">
    <div class="slider">
      {Array.from({ length: 5 }, (_, i) => (
          <div class="slide">
            <img src={`/${i + 1}.png`} alt={`슬라이드 ${i + 1}`}>
            <h2 class="slider-title">일본 편의점 꿀팁<br>일본에 갈때 꼭 먹어야할 편의점 음식 추천</h2>
          </div>
      ))}
    </div>
  </div>

  <div class="gm-container">
    <img src="/gm.png" alt="GM" class="gm-image">
  </div>

  <style>
    .slider-container {
      position: relative;
      width: 90%;
      max-width: 90vw;
      margin: 0 auto;
      overflow: hidden;
      height: 100vh;
    }

    .slider {
      display: flex;
      transition: transform 0.5s ease-in-out;
      height: 100%;
    }

    .slide {
      min-width: 100%;
      height: 100%;
      position: relative;
    }

    .slide img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: brightness(0.5);
    }

    .slider-title {
      position: absolute;
      top: 30%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: white;
      font-size: 50px;
      line-height: 1.4;
      font-weight: bold;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
      width: 100%;
    }

    .gm-container {
      position: fixed;
      bottom: 15px;
      left: 15px;
      z-index: 10;
    }

    .gm-image {
      width: 80px;
      height: auto;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      //@ts-ignore
      const {style} = document.querySelector('.slider');
      const slides = document.querySelectorAll('.slide');
      let currentIndex = 0;

      function showSlide(index: number) {
        if (index < 0) index = slides.length - 1;
        if (index >= slides.length) index = 0;
        style.transform = `translateX(-${index * 100}%)`;
        currentIndex = index;
      }

      setInterval(() => {
        showSlide(currentIndex + 1);
      }, 3000);
    });
  </script>
</Layout>
